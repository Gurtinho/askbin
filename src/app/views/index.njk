<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'partials/header.njk' %}
</head>
<body>
    {% include 'partials/navbar.njk' %}
    <section class="container container-index">
        <div class="card card-question">
            <div class="card-body card-content">
                <h3>Precisa de ajuda?</h3>
            </div>
            <div class="card-footer">
                <a href="/question"><button class="btn btn-form bg-gradient btn-response">Perguntar</button></a>
            </div>
        </div>

        <div class="container">
            <div class="content-recent">
                <h4>Perguntas recentes</h4>
            </div>
        </div>

        {% for quest in question %}
            <div class="card card-question">
                <div class="card-body card-content">
                    <h3>{{ quest.title }}</h3>
                    <p class="card-p" value="{{ quest.created_at }}"></p>
                </div>
                <div class="card-body">
                    <p>{{ quest.question }}</p>
                </div>
                <div class="card-footer">
                    <a href="/questions/{{ quest.id }}"><button class="btn btn-form bg-gradient btn-response">Ver respostas</button></a>
                </div>
            </div>
        {% endfor %}
    </section>
</body>
    {% include 'partials/footer.njk' %}
    <script src="/js/dateformat.js"></script>
</html>