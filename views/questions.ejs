<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/header.ejs'); %> 
</head>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <section class="container">
        <div class="card maincard">
            <div class="card-header card-content">
                <h3><%= quest.title %></h3>
            </div>
            <div class="card-body card-content">
                <p><%= quest.question %></p>
            </div>
            <div class="card-footer">
                <a href="/answer/<%= quest.id %>"><button class="btn btn-success bg-gradient btn-response">Responder</button></a>
            </div>
        </div>

        <!-- respostas -->
        <div class="container">
            <div class="content-recent">
                <h4>Respostas recentes</h4>
            </div>
        </div>

        <div class="container-index">
            <% answers.forEach((answer) => { %>
                <div class="card card-content card-response">
                    <div class="card-body card-content">
                        <p><%= answer.answer %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</body>
    <%- include ('partials/footer.ejs'); %> 
</html>